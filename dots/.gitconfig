[credential]
  helper =
[user]
  name =
  email =
[push]
  default = simple
  followTags = true
[core]
  editor = vim
  autocrlf = false
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  light = false
  line-numbers = true
  diff-so-fancy = true
[merge]
  conflictStyle = merge
[commit]
  verbose = true
  gpgsign = true
[pull]
  rebase = true
[init]
  defaultBranch = main

